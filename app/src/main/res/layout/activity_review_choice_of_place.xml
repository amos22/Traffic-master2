<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#FFF0D6"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/newlogo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="0.05">


  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="This are the place that you selected, Click the item that you desire to delete."
      android:textColor="#000"
      android:textSize="16sp"
      android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05">


<android.support.v7.widget.RecyclerView
    android:id="@+id/recyclerViewStaff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

</android.support.v7.widget.RecyclerView>
    </LinearLayout>











    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin = "10dp"

        android:layout_weight="0.05">

<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Plot These destination"
    android:textSize="18dp"
    android:background="#EE7469"/>
    </LinearLayout>






</LinearLayout>










