<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#FFF0D6"
    android:layout_height="match_parent"
    >

 <!--   START OF TITLE-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:textColor="#EE7469"
        android:text="Art in Island"
        android:textSize="35sp"
        android:textStyle="normal|bold" />
</LinearLayout>
    <!--  END OF TITLE -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/artt">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#383732"

            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <!--  ADDED THIS    android:layout_gravity="bottom"  -->
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:isIndicator="true"
                android:scaleX=".5"
                android:scaleY=".5"
                android:rating="4.6"/>
        </LinearLayout>
        <!--QUEZONMEMORIALCIRCLE -->
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="About"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#383732"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="3D Art Museum, opens to public TUESDAYS-SUNDAYS and HOLIDAYS \nfrom 09:30AM to 09:30PM."
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#383732" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView2"
            android:layout_marginLeft="10dp"
            android:text="Contact"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#383732"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_below="@+id/textView3"
            android:text="(02) 421 1356"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#383732" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView4"
            android:layout_marginLeft="10dp"
            android:text="Address"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#383732"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="175 15th Ave., Brgy. Socorro,Quezon City, Philippines"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:textColor="#383732" />

        <!--BUtton-->


        <RelativeLayout
        android:id="@+id/hiders"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#EE7469"
        android:orientation="horizontal"
        android:visibility="invisible"
        android:weightSum="1"
        android:layout_alignBaseline="@+id/textView"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentStart="true">

        <Button
            android:id="@+id/p1"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="#FFF0D6"
            android:onClick="p1"
            android:text="Wildlife Mini Zoo"
            android:textColor="#EE7469" />

        <Button
            android:id="@+id/p2"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/p1"
            android:layout_below="@+id/p1"
            android:layout_marginTop="10dp"
            android:background="#FFF0D6"
            android:onClick="p2"
            android:text="La Mesa Ecopark"
            android:textColor="#EE7469" />

        <Button
            android:id="@+id/p3"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/p2"
            android:layout_below="@+id/p2"
            android:layout_marginTop="10dp"
            android:background="#FFF0D6"
            android:onClick="p3"
            android:text="Vargas Museuem"
            android:textColor="#EE7469" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Suggested Places"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#383732"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

        <Button
            android:id="@+id/ad"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/hiders"
            android:layout_marginBottom="10dp"
            android:background="@drawable/border"
            android:onClick="artadd"
            android:text="Add Destination"
            android:textColor="#EE7469" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ad"
            android:background="@drawable/border"
            android:text="Delete Destination"
            android:textColor="#EE7469" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:src="@null"
        android:background="#fff">
        <!--  <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/imageView"
              android:layout_gravity="center"
              android:scaleType="center"
              android:background="@drawable/edsav2"/> -->
    </LinearLayout>
</LinearLayout>
