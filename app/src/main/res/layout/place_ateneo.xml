<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@drawable/aten"> <!--QUEZONMEMORIALCIRCLE -->
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:background="#FFF0D6">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="About"
            android:textColor="#383732"
            android:textStyle="bold"
            android:id="@+id/textView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="31dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:text="It's free of charge and can only hold limited number of visitors, groups should schedule their visit ahead of time."
            android:id="@+id/textView2"
            android:textColor="#000"
            android:layout_below="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:layout_alignParentEnd="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Contact"
            android:textColor="#383732"
            android:textStyle="bold"
            android:id="@+id/textView3"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(02) 426 6488"
            android:textColor="#000"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:id="@+id/textView4"
            android:layout_below="@+id/textView3"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignStart="@+id/textView2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Address"
            android:textColor="#383732"
            android:textStyle="bold"
            android:id="@+id/textView5"
            android:layout_below="@+id/textView4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmallPopupMenu"
            android:text="Ateneo de Manila University Katipunan Avenue, Loyola Heights Quezon City"
            android:id="@+id/textView6"             android:textColor="#000"
            android:layout_below="@+id/textView5"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Reviews"
            android:textColor="#383732"
            android:textStyle="bold"
            android:id="@+id/textView7"
            android:layout_below="@+id/textView6"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#EE7469"
            android:background="@drawable/border"
            android:text="Add Destination"
            android:layout_marginBottom="6dp"
            android:id="@+id/ad"
            android:layout_above="@+id/button2"
            android:layout_alignParentStart="true"
            android:onClick="artadd" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#EE7469"
            android:background="@drawable/border"
            android:text="Delete Destination"
            android:id="@+id/button2"
            android:layout_marginBottom="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />


        <!--BUtton--><RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:background="#EE7469"
        android:weightSum="1"
        android:visibility="invisible"
        android:id="@+id/hiders">


        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Maginhawa Food Park"
            android:background="#FFF0D6"
            android:textColor="#EE7469"
            android:onClick="p1"
            android:id="@+id/p1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Quezon Memorial Circle"
            android:background="#FFF0D6"
            android:textColor="#EE7469"
            android:id="@+id/p2"
            android:onClick="p2"
            android:layout_below="@+id/p1"
            android:layout_alignStart="@+id/p1"
            android:layout_marginTop="10dp" />

        <Button
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#FFF0D6"
            android:textColor="#EE7469"
            android:id="@+id/p3"
            android:onClick="p3"
            android:layout_below="@+id/p2"
            android:layout_alignStart="@+id/p2"
            android:layout_marginTop="10dp"
            android:text="UP Ayala Technohub" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Suggested Places"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#383732"
            android:layout_marginTop="5dp"
            android:id="@+id/textView21"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
        
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBar"
            android:isIndicator="true"
            android:scaleX=".5"
            android:scaleY=".5"
            android:rating="4.5"
            android:layout_below="@+id/textView7"
            android:layout_alignStart="@+id/textView6" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:src="@null"
        android:background="#fff">
        <!--  <ImageView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:id="@+id/imageView"
              android:layout_gravity="center"
              android:scaleType="center"
              android:background="@drawable/edsav2"/> -->
    </LinearLayout>
</LinearLayout>
